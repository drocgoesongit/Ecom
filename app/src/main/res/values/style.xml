<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyApplication.OultineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_black</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxBackgroundColor">@color/light_gray</item>
    </style>

    <style name= "ThemeOverlay_MaterialComponents_MaterialAlertDialog_FullWidthButtons" parent = "MaterialAlertDialog.Material3">
        <item name = "cornerFamily">rounded</item>
        <item name = "cornerRadius">16dp</item>
        <item name = "android:backgroundDimEnabled">true</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>


    <style name="ThemeOverlay.App.BottomNavigationView" parent="">

        <item name="colorOnSurfaceVariant">@color/text_gray</item>
        <item name="colorSecondaryContainer">@color/white</item>
<!--        indicator color above one-->
        <item name="colorOnSecondaryContainer">@color/black</item>
        <item name="elevation">3dp</item>
        <item name="itemRippleColor">@color/white</item>
    </style>

    <style name="h2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto</item>
    </style>


</resources>